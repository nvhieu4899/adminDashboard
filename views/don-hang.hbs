<title>{{{title}}}</title>
<div class="col-lg-12 col-sm-6">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Quản lí đơn hàng</strong>
        </div>
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Mã số đơn hàng</th>
                        <th scope="col">Họ tên khách hàng</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Thành tiền</th>
                        <th scope="col">Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each order}}
                    <tr>
                        <th scope="row">{{{_id}}}</th>
                        <td>{{{name}}}</td>
                        <td>{{{address}}}</td>
                        <td>{{{cart.totalPrice}}}&#8363;</td>
                        <td>
                            <select>
                                <option {{#compare status "==" 0}}selected="true"{{/compare}}value="0"><i class="fa fas fa-times"></i>Chưa giao</option>
                                <option {{#compare status "==" 1}}selected="true"{{/compare}}value="1"><i class="fa fas fa-truck"></i>Đang giao</option>
                                <option {{#compare status "==" 2}}selected="true"{{/compare}}value="2"><i class="fa fas fa-check-double"></i>Đã giao</option>
                            </select>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>